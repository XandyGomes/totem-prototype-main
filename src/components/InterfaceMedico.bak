import { useState, useEffect } from "react";
import { Button } from "@/components/ui/button";
import { Card } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { ScrollArea } from "@/components/ui/scroll-area";
import { 
  obterFilaMedico, 
  obterProximoPaciente, 
  chamarPaciente, 
  iniciarAtendimento, 
  finalizarAtendimento,
  priorizarPaciente,
  obterEstatisticasFila,
  PacienteFila 
} from "@/services/filaService";
import { tiposPrioridade } from "@/contexts/TotemContext";
import { 
  Phone, 
  Play, 
  Check, 
  ArrowUp, 
  RefreshCw, 
  Users, 
  Clock,
  AlertTriangle,
  Star
} from "lucide-react";
import { useToast } from "@/components/ui/use-toast";

interface InterfaceMedicoProps {
  medicoId: string;
  medicoNome: string;
  especialidade: string;
  salaAtual?: string;
}

const InterfaceMedico = ({ 
  medicoId, 
  medicoNome, 
  especialidade, 
  salaAtual = "Sala não definida" 
}: InterfaceMedicoProps) => {
  const { toast } = useToast();
  const [fila, setFila] = useState<PacienteFila[]>([]);
  const [proximoPaciente, setProximoPaciente] = useState<PacienteFila | null>(null);

  // Atualiza dados da fila
  const atualizarFila = () => {
    const filaMedico = obterFilaMedico(medicoId);
    setFila(filaMedico?.pacientes || []);
    
    const proximo = obterProximoPaciente(medicoId);
    setProximoPaciente(proximo);
  };

  useEffect(() => {
    atualizarFila();
    const interval = setInterval(atualizarFila, 5000);
    return () => clearInterval(interval);
  }, [medicoId]);

  const handleChamarPaciente = (pacienteId: string) => {
    const sucesso = chamarPaciente(pacienteId);
    if (sucesso) {
      toast({
        title: "Paciente chamado!",
        description: "Chamada enviada para todas as TVs do NGA.",
      });
      atualizarFila();
    }
  };

  const stats = obterEstatisticasFila(medicoId);

  return (
    <div className="min-h-screen bg-gray-50 p-4">
      <div className="max-w-7xl mx-auto space-y-6">
        
        {/* Header */}
        <Card className="p-6">
          <div className="flex items-center justify-between">
            <div>
              <h1 className="text-2xl font-bold text-gray-900">{medicoNome}</h1>
              <p className="text-gray-600">{especialidade}</p>
              <p className="text-sm text-gray-500">{salaAtual}</p>
            </div>
            
            <Button variant="outline" size="sm" onClick={atualizarFila}>
              <RefreshCw className="w-4 h-4 mr-2" />
              Atualizar
            </Button>
          </div>
        </Card>

        {/* Estatísticas */}
        <div className="grid grid-cols-2 md:grid-cols-4 gap-4">
          <Card className="p-4">
            <div className="flex items-center gap-2">
              <Users className="w-5 h-5 text-blue-500" />
              <div>
                <p className="text-2xl font-bold">{stats.aguardando}</p>
                <p className="text-sm text-gray-600">Aguardando</p>
              </div>
            </div>
          </Card>
          
          <Card className="p-4">
            <div className="flex items-center gap-2">
              <Clock className="w-5 h-5 text-green-500" />
              <div>
                <p className="text-2xl font-bold">{stats.emAtendimento}</p>
                <p className="text-sm text-gray-600">Em atendimento</p>
              </div>
            </div>
          </Card>
          
          <Card className="p-4">
            <div className="flex items-center gap-2">
              <Star className="w-5 h-5 text-red-500" />
              <div>
                <p className="text-2xl font-bold">{stats.superprioridade}</p>
                <p className="text-sm text-gray-600">Superprioridade</p>
              </div>
            </div>
          </Card>
          
          <Card className="p-4">
            <div className="flex items-center gap-2">
              <Check className="w-5 h-5 text-gray-500" />
              <div>
                <p className="text-2xl font-bold">{stats.atendidos}</p>
                <p className="text-sm text-gray-600">Atendidos hoje</p>
              </div>
            </div>
          </Card>
        </div>

        {/* Próximo Paciente */}
        {proximoPaciente && (
          <Card className="p-6">
            <h2 className="text-lg font-semibold mb-4 flex items-center gap-2">
              <AlertTriangle className="w-5 h-5 text-orange-500" />
              PRÓXIMO PACIENTE
            </h2>
            
            <div className="flex items-center justify-between bg-yellow-50 p-4 rounded-lg border border-yellow-200">
              <div className="flex-1">
                <div className="flex items-center gap-4">
                  <div className="text-3xl">
                    {tiposPrioridade[proximoPaciente.prioridade.tipo].icone}
                  </div>
                  <div>
                    <h3 className="text-xl font-bold">{proximoPaciente.consulta.paciente.nome}</h3>
                    <p className="text-gray-600">
                      Senha: <span className="font-mono font-bold">{proximoPaciente.senha.numero}</span>
                    </p>
                    <Badge>
                      {proximoPaciente.prioridade.descricao}
                    </Badge>
                  </div>
                </div>
              </div>
              
              <Button 
                size="lg"
                onClick={() => handleChamarPaciente(proximoPaciente.id)}
                disabled={proximoPaciente.status !== 'aguardando'}
              >
                <Phone className="w-4 h-4 mr-2" />
                Chamar
              </Button>
            </div>
          </Card>
        )}

        {/* Lista da Fila */}
        <Card className="p-6">
          <h2 className="text-lg font-semibold mb-4">Fila de Atendimento</h2>
          
          <ScrollArea className="h-[400px]">
            {fila.length === 0 ? (
              <div className="text-center py-8 text-gray-500">
                <Users className="w-12 h-12 mx-auto mb-2 opacity-50" />
                <p>Nenhum paciente na fila</p>
              </div>
            ) : (
              <div className="space-y-3">
                {fila.map((paciente, index) => (
                  <div key={paciente.id} className="flex items-center gap-4 p-4 border rounded-lg hover:bg-gray-50">
                    
                    <div className="w-8 h-8 bg-gray-100 rounded-full flex items-center justify-center font-bold text-sm">
                      {index + 1}
                    </div>
                    
                    <div className="text-2xl">
                      {tiposPrioridade[paciente.prioridade.tipo].icone}
                    </div>
                    
                    <div className="flex-1">
                      <h4 className="font-semibold">{paciente.consulta.paciente.nome}</h4>
                      <p className="text-sm text-gray-600">
                        Senha: <span className="font-mono">{paciente.senha.numero}</span>
                      </p>
                      <Badge variant="outline">
                        {paciente.prioridade.descricao}
                      </Badge>
                    </div>
                    
                    <div className="flex gap-1">
                      {paciente.status === 'aguardando' && (
                        <Button 
                          size="sm"
                          onClick={() => handleChamarPaciente(paciente.id)}
                        >
                          <Phone className="w-4 h-4" />
                        </Button>
                      )}
                    </div>
                  </div>
                ))}
              </div>
            )}
          </ScrollArea>
        </Card>
      </div>
    </div>
  );
};

export default InterfaceMedico;
